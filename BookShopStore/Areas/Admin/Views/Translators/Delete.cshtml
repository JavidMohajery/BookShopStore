@model Translator
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="card">
            <div class="card-header">حذف مترجم</div>
            <div class="card-body">
                <p>آیا از حذف <span>@Model.Name</span> <span>@Model.Family</span>  از لیست مترجمین مطمئن هستید؟</p>
            </div>
        </div>
        <form asp-action="Deleted">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="submit" value="بله" class="btn btn-danger"/>
            <a asp-action="Index" class="btn btn-secondary">خیر</a>
        </form>
    </div>

